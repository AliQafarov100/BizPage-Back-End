@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="slider-section">
        <div class="slider">
            @foreach (Slider slider in Model.Sliders)
            {
                <div class="items actives text-light" style="background-image: url(assets/Image/Slider/@slider.Image);">
                    <div class="false-items d-flex align-items-center">
                        <i class="fa-solid fa-chevron-left"></i>
                        <i class="fa-solid fa-chevron-right"></i>
                        <div class="info">
                            <h1>@slider.Title</h1>
                            <p>
                                @slider.SubTilte
                            </p>
                            <a href="" class="btn btn-success slideBtn">Get Started</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    </section>

    <section id="about-section" class="py-5">

        <div class="container">
            <div class="row">
                <h4 class="text-center">ABOUT US</h4>
                <div class="line">
                    <div class="child"></div>
                </div>
                <p class="text-center">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                    tempor incididunt ut
                    labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                    laboris nisi ut aliquip ex ea commodo consequat.
                </p>
                @foreach (Card card in Model.Cards)
                {
                    <div class="cards col-lg-4">
                        <div class="info-about text-center">
                            <img src="/assets/Image/About/@card.Image" alt="">
                            <div class="icon">
                                <i class="@card.Icon"></i>
                            </div>
                            <div class="text py-3">
                                <strong>@card.Plan</strong>
                                <p>
                                    @card.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="portfolio-section" class="py-5">
        <div class="container">
            <div class="row">
                <h4 class="text-center">OUR PORTFOLIO</h4>
                <div class="line">
                    <div class="child"></div>
                </div>
                <p class="text-center">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                    tempor incididunt ut
                    labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                    laboris nisi ut aliquip ex ea commodo consequat.
                </p>
                <div class="category d-flex justify-content-center col-lg-12">
                    <a class="btn btn-light all">All</a>
                    @{
                        var count = 0;


                        foreach (Category category in Model.Categories)
                        {
                            count++;
                            string className = "";

                            if (count == 1)
                            {
                                className = "btn btn-light cards";
                            }
                            else if (count == 2)
                            {
                                className = "btn btn-light web";
                            }
                            else if (count == 3)
                            {
                                className = "btn btn-light app";
                            }
                            <a class="@className @count">@category.Name</a>
                        }
                    }
                </div>
            </div>
            <div class="row all-category mt-4">
                @foreach (Portfolio portfolio in Model.Portfolios.Where(p => p.CategoryId == 3))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/app/@portfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@portfolio.Title</h4>
                                <p>@portfolio.SubTitle</p>
                            </div>

                        </div>
                    </div>
                }
                @foreach (Portfolio cardportfolio in Model.Portfolios.Where(c => c.CategoryId == 1))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/card/@cardportfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@cardportfolio.Title</h4>
                                <p>@cardportfolio.SubTitle</p>
                            </div>
                        </div>
                    </div>
                }
                @foreach (Portfolio webportfolio in Model.Portfolios.Where(c => c.CategoryId == 2))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/web/@webportfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@webportfolio.Title</h4>
                                <p>@webportfolio.SubTitle</p>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <div class="row app-category">
                @foreach (Portfolio portfolio in Model.Portfolios.Where(p => p.CategoryId == 3))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/app/@portfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@portfolio.Title</h4>
                                <p>@portfolio.SubTitle</p>
                            </div>

                        </div>
                    </div>
                }
            </div>
            <div class="row web-category">
                @foreach (Portfolio webportfolio in Model.Portfolios.Where(c => c.CategoryId == 2))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/web/@webportfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@webportfolio.Title</h4>
                                <p>@webportfolio.SubTitle</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row cards-category">
                @foreach (Portfolio cardportfolio in Model.Portfolios.Where(c => c.CategoryId == 1))
                {
                    <div class="cards col-lg-4">
                        <div class="info">
                            <img src="/assets/Image/Portfolio/card/@cardportfolio.Image" alt="">
                            <div class="text py-3">
                                <h4>@cardportfolio.Title</h4>
                                <p>@cardportfolio.SubTitle</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="clients" class="py-5">
        <div class="container">
            <div class="row">
                <h4 class="text-center">OUR CLIENTS</h4>
                <div class="line">
                    <div class="child"></div>
                </div>
                <p class="text-center">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                    tempor incididunt ut
                    labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                    laboris nisi ut aliquip ex ea commodo consequat.
                </p>

                <div class="owl-carousel owl-theme">
                    @foreach (Client client in Model.Clients)
                    {
                        <div class="item">
                            <img src="/assets/Image/Clients/@client.Iamge" alt="">
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <section id="contact" class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <h4 class="text-center">Contacts</h4>
                <div class="line">
                    <div class="child"></div>
                </div>
                <p class="text-center">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
                    tempor incididunt ut
                    labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco
                    laboris nisi ut aliquip ex ea commodo consequat.
                </p>
                <div class="address col-lg-12">
                    <div class="row">
                        @{
                            var counter = 0;
                            foreach (Address address in Model.Addresses)
                            {
                                var styleSheet = counter++ == 2 ? "" : "border-right: 1px solid gray;";

                                <div class="info col-lg-4" style="@styleSheet">
                                    <i class="@address.Icon"></i>
                                    <h4>@address.Name</h4>
                                    <p>@address.Data</p>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="message col-lg-12 mt-4">
                    <div class="inputs">
                        <form action="" class="d-flex justify-content-between">
                            <input type="text" placeholder="Your Name">
                            <input type="text" placeholder="Your Email">
                        </form>
                    </div>
                    <form action="">
                        <input type="text" placeholder="Subject" class="subject"> <br>
                        <textarea name="" id="" cols="30" rows="6" placeholder="Message"></textarea>
                    </form>
                    <a href="" class="btn btn-success send-btn text-center">Send Message</a>
                </div>
            </div>
        </div>
    </section>
</main>

